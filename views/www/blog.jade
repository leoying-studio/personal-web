extends ./layout.jade
block append stylesheet
    link(rel="stylesheet", href="/styles/blog.css")
block content
    section.container.pt-5.pb-5.blog-grid
        div.row
            - each item in data.data
                article.col-md-4.mb-3 
                    div.card
                        a(href="/articles/detail/" + item._id) 
                            img(src="/" + item.illustration, alt="", srcset="").card-img-top
                        div.card-body
                            h4.title.mb-3
                                span.icon.iconfont.icon-link
                                span #{item.title}
                            p.desc #{item.description}
    section.container.flex-center-all.mb-5
        div#extendPagination(count=data.count)
block append script
    script(src="/lib/extendPagination.js") 
    script(src="/js/blog.js") 
           